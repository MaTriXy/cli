{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "baseUrl": "./",
    "module": "es2015",
    "types": [
      "jasmine",
      "node"
    ],
    "paths": {
      "@<%=app.name%>/core": [
        "../../../libs/@<%=app.name%>/core/src/index.ts"
      ],
      "@<%=app.name%>/web": [
        "../../../libs/@<%=app.name%>/web/src/index.ts"
      ]
    }
  },
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
  ]
}